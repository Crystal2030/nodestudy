<%- include ../include/header %>
<form action="/articles/add" method="post" role="form" class="form-horizontal" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="" class="form-control" id="title" name="title" placeholder="Please enter title"/>
        </div>
    </div>
    <div class="form-group">
        <label for="content" class="col-sm-2 control-label">Content</label>
        <div class="col-sm-10">
            <textarea class="form-control" name="content" id="content" cols="30" rows="10" placeholder="Please enter content"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="img" class="col-sm-2 control-label">Image</label>
        <div class="col-sm-10">
            <input type="file" name="img" id="img" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Post</button>
            <button type="reset" class="btn btn-default">Reset</button>
        </div>
    </div>
</form>
<%- include ../include/footer %>